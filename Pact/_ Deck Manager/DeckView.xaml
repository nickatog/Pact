<UserControl x:Class="Pact.DeckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pact"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:behaviors="clr-namespace:Pact.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ControlTemplate x:Key="bottomButton" TargetType="Button">
            <Grid Background="{TemplateBinding Background}">
                <Grid x:Name="Overlay" Background="#20000000" Panel.ZIndex="1" />

                <Border x:Name="Outline" BorderBrush="Black" BorderThickness="{TemplateBinding BorderThickness}" />

                <Label Content="{TemplateBinding Content}"
                       FontFamily="Segoe UI"
                       FontSize="10"
                       Foreground="{TemplateBinding Foreground}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Padding="2" />
            </Grid>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Overlay" Property="Background" Value="#10000000" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="Outline" Property="Background" Value="#30000000" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <i:Interaction.Behaviors>
        <behaviors:DeckDragBehavior />
    </i:Interaction.Behaviors>

    <StackPanel>
        <Border x:Name="DropHighlightTop" Background="#DDDDDD" HorizontalAlignment="Stretch" Height="4" Margin="10,0,10,2" Visibility="Hidden" CornerRadius="2" />

        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0" Width="14">
                    <Grid>
                        <Border x:Name="classMask" CornerRadius="4,0,0,4" BorderBrush="White" Background="Black" />
                        <Grid Background="{Binding Class, Converter={StaticResource ClassNameToBrush}}">
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=classMask}" />
                            </Grid.OpacityMask>
                        </Grid>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <!-- FontAwesome pencil icon: f303 -->
                    <Label Content="{Binding Title}" Grid.Row="0" FontFamily="Arial" FontSize="18" FontWeight="Bold" VerticalAlignment="Top" Margin="-2,-2,0,0" />

                    <WrapPanel Grid.Row="1" VerticalAlignment="Top">
                        <Label Content="Wins: " />
                        <Label Content="{Binding Wins}" />

                        <Label Content="Losses: " />
                        <Label Content="{Binding Losses}" />
                    </WrapPanel>

                    <Grid Grid.Row="2" Height="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Delete" Command="{Binding Delete}" BorderThickness="0,1,0,0" Template="{StaticResource bottomButton}" Background="#F0A0A0" />
                        <Button Grid.Column="1" Content="Details" IsEnabled="False" BorderThickness="1,1,0,0" Template="{StaticResource bottomButton}" />
                        <Button Grid.Column="2" Content="Track" Command="{Binding TrackDeck}" BorderThickness="1,1,0,0" Template="{StaticResource bottomButton}" />
                    </Grid>
                </Grid>

                <!--<Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    
                    <Border CornerRadius="0,3,3,0" Background="White">
