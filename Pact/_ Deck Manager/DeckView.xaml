                </Border>
            </Grid>
        </Border>

        <Border x:Name="DropHighlightBottom" Background="#DDDDDD" HorizontalAlignment="Stretch" Height="4" Margin="10,2,10,0" Visibility="Hidden" CornerRadius="2" />
    </StackPanel>
</UserControl>
