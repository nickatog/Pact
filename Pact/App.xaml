<Application x:Class="Pact.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pact"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type local:DeckViewModel}">
            <local:DeckView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:TrackedCardViewModel}">
            <local:TrackedCardView />
        </DataTemplate>

        <local:CardCountToOpacityConverter x:Key="CardCountToOpacity" />
        <local:ClassNameToBrushConverter x:Key="ClassNameToBrush" />
        <local:HiddenWhenZeroCountConverter x:Key="HiddenWhenZeroCount" />
        <local:OpponentCoinStatusToBrushConverter x:Key="OpponentCoinStatusToBrush" />
        <local:OpponentCoinStatusToVisibilityConverter x:Key="OpponentCoinStatusToVisibility" />

        <FontFamily x:Key="BelweMedium">/fonts/Belwe-Medium.ttf#Belwe-Medium</FontFamily>
        <FontFamily x:Key="FontAwesome">/fonts/fontawesome-webfont.ttf#FontAwesome</FontFamily>
    </Application.Resources>
</Application>
